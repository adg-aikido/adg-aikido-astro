---
import "../styles/adg.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import StyleControls from "../components/common/StyleControls.astro";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Aikido Dojo Gamlestaden i Göteborg - träningsglädje sedan 1989",
  description = "Aikido Dojo Gamlestaden - Välkommen till oss i Gamlestaden för träningsglädje och effektivt självförsvar.",
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="sv" class="h-full scroll-smooth" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#3b82f6" />
    <link rel="icon" type="image/icon" href="/favicon.ico" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Fonts loaded via adg.css: Poppins (sans) and Playfair Display (serif) -->

    <!-- Alpine.js -->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
  </head>
  <body
    class="relative min-h-full bg-fixed bg-center bg-cover bg-base-100"
    satyle="background-image: url(/assets/shomen-adg-white.png)"
  >
    <!-- Skip to main content link for accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:z-50 focus:top-4 focus:left-4 focus:px-4 focus:py-2 focus:bg-primary focus:text-primary-content focus:rounded-md focus:shadow-lg"
    >
      Hoppa till huvudinnehåll
    </a>

    <!-- Background overlay -->
    <div
      class="fixed inset-0 bg-cover bg-center opacity-40 pointer-events-none"
      satyle="background-image: url('/assets/shomen-adg-white.png'); z-index: 0;"
    >
    </div>

    <!-- Content wrapper -->
    <Header currentPath={currentPath} />
    
    <!-- Style Controls (Theme & Font Choosers) -->
    <StyleControls />
    
    <div class="relative z-10">
      <!-- MAIN CONTENT -->
      <main id="main-content" class="flex-1 pb-12">
        <slot />
      </main>
    </div>

    <Footer />
  </body>
</html>
