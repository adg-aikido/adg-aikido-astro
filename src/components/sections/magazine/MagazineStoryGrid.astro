---
// Magazine-style feature story grid with asymmetric layout
import { getCollection } from 'astro:content';

const news = await getCollection('news');
const sortedNews = news.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
).slice(0, 4);

const [featured, ...stories] = sortedNews;
---

<section id="featured-stories" class="py-20 px-6 bg-base-100">
  <div class="container mx-auto max-w-7xl">
    <!-- Section Header -->
    <div class="mb-16 text-center">
      <div class="inline-block">
        <p class="text-xs tracking-[0.3em] uppercase text-base-content/60 mb-2">Fr√•n Dojon</p>
        <h2 class="text-5xl md:text-7xl font-bold italic" style="font-family: 'Playfair Display', 'Crimson Pro', Georgia, serif;">
          Senaste Nytt
        </h2>
        <div class="h-1 w-24 bg-primary mx-auto mt-4"></div>
      </div>
    </div>

    <!-- Featured Story (Large) -->
    <article class="mb-12 group">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        <!-- Image Side -->
        <div class="relative overflow-hidden rounded-2xl aspect-[4/3] bg-gradient-to-br from-primary/20 to-secondary/20">
          {featured.data.images && featured.data.images.length > 0 ? (
            <img 
              src={featured.data.images[0].src} 
              alt={featured.data.images[0].alt}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
            />
          ) : (
            <div class="w-full h-full flex items-center justify-center text-9xl">
              {featured.data.icon}
            </div>
          )}
          <!-- Category Badge -->
          <div class="absolute top-6 left-6">
            <span class="badge badge-primary badge-lg font-bold tracking-wider">
              {featured.data.categoryId.toUpperCase()}
            </span>
          </div>
        </div>

        <!-- Content Side -->
        <div class="space-y-6">
          <div>
            <p class="text-sm text-base-content/60 mb-3">
              {new Date(featured.data.date).toLocaleDateString('sv-SE', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </p>
            <h3 class="text-4xl md:text-5xl font-bold leading-tight mb-4" 
                style="font-family: 'Playfair Display', 'Crimson Pro', Georgia, serif;">
              {featured.data.title}
            </h3>
            <p class="text-xl text-base-content/70 leading-relaxed">
              {featured.data.description}
            </p>
          </div>

          <!-- Pull Quote -->
          <div class="border-l-4 border-primary pl-6 py-4 my-8 italic text-lg text-base-content/80">
            "{featured.data.description}"
          </div>
        </div>
      </div>
    </article>

    <!-- Secondary Stories (Grid) -->
    <div class="grid md:grid-cols-3 gap-8">
      {stories.map((story, index) => (
        <article>
          <div class="space-y-4">
            <!-- Story Number -->
            <div class="flex items-center gap-4">
              <span class="text-5xl font-serif text-base-content/20">
                0{index + 2}
              </span>
              <div class="h-px flex-1 bg-gradient-to-r from-base-content/20 to-transparent"></div>
            </div>

            <!-- Category -->
            <span class="badge badge-ghost badge-sm">
              {story.data.categoryId}
            </span>

            <!-- Title -->
            <h4 class="text-2xl font-bold leading-tight">
              {story.data.title}
            </h4>

            <!-- Description -->
            <p class="text-base-content/70 line-clamp-3">
              {story.data.description}
            </p>

            <!-- Date -->
            <p class="text-sm text-base-content/50">
              {new Date(story.data.date).toLocaleDateString('sv-SE', { 
                month: 'short', 
                day: 'numeric' 
              })}
            </p>
          </div>
        </article>
      ))}
    </div>

    <!-- Decorative Divider -->
    <div class="mt-20 flex items-center gap-4">
      <div class="h-px flex-1 bg-gradient-to-r from-transparent via-base-content/20 to-transparent"></div>
      <div class="w-2 h-2 bg-primary rounded-full"></div>
      <div class="h-px flex-1 bg-gradient-to-r from-transparent via-base-content/20 to-transparent"></div>
    </div>
  </div>
</section>
