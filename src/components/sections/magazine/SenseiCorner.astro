---
// Sensei's wisdom section with handwritten aesthetic
import { getCollection } from 'astro:content';

const senseis = await getCollection('senseis');
const ylva = senseis.find(s => s.data.initials === 'YB');

const quotes = [
  {
    text: "Aikido är inte att besegra din motståndare. Det är att besegra dig själv.",
    author: "Morihei Ueshiba"
  },
  {
    text: "Varje fall är en möjlighet att resa sig starkare.",
    author: "Ylva Beckman Sensei"
  },
  {
    text: "På mattan lär vi oss inte bara tekniker, utan livets väg.",
    author: "Traditional Aikido Wisdom"
  }
];

// Rotate quote based on week number
const weekNumber = Math.floor((Date.now() - new Date(new Date().getFullYear(), 0, 1).getTime()) / (7 * 24 * 60 * 60 * 1000));
const currentQuote = quotes[weekNumber % quotes.length];
---

<section id="sensei-corner" class="py-20 px-6 bg-gradient-to-br from-base-200 via-base-100 to-base-300">
  <div class="container mx-auto max-w-5xl">
    <!-- Section Header -->
    <div class="mb-16 text-center">
      <div class="inline-block">
        <p class="text-xs tracking-[0.3em] uppercase text-base-content/60 mb-2">Visdom från Mattan</p>
        <h2 class="text-5xl md:text-7xl font-bold italic" style="font-family: 'Playfair Display', 'Crimson Pro', Georgia, serif;">
          Från Sensei
        </h2>
        <div class="h-1 w-24 bg-primary mx-auto mt-4"></div>
      </div>
    </div>

    <!-- Main Quote Card -->
    <div class="relative">
      <!-- Decorative Background Elements -->
      <div class="absolute -top-8 -left-8 w-64 h-64 bg-primary/5 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-8 -right-8 w-64 h-64 bg-secondary/5 rounded-full blur-3xl"></div>

      <!-- Quote Card -->
      <div class="relative bg-base-100 rounded-3xl shadow-2xl border-2 border-base-content/10 overflow-hidden">
        <!-- Textured Paper Background -->
        <div class="absolute inset-0 opacity-5" style="background-image: url('data:image/svg+xml,%3Csvg width=\'100\' height=\'100\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cfilter id=\'noise\'%3E%3CfeTurbulence baseFrequency=\'0.9\' numOctaves=\'4\'/%3E%3C/filter%3E%3Crect width=\'100\' height=\'100\' filter=\'url(%23noise)\' opacity=\'0.5\'/%3E%3C/svg%3E');"></div>

        <div class="relative p-8 md:p-16">
          <!-- Opening Quote Mark -->
          <div class="text-8xl md:text-9xl text-primary/20 font-serif leading-none mb-4">"</div>

          <!-- Quote Text -->
          <blockquote class="text-2xl md:text-4xl font-light italic leading-relaxed text-base-content mb-8" 
                      style="font-family: 'Playfair Display', 'Crimson Pro', Georgia, serif;">
            {currentQuote.text}
          </blockquote>

          <!-- Closing Quote Mark -->
          <div class="text-8xl md:text-9xl text-primary/20 font-serif leading-none text-right -mt-16 mb-8">"</div>

          <!-- Author Signature -->
          <div class="flex items-center justify-end gap-4">
            <div class="h-px w-16 bg-gradient-to-l from-base-content/30 to-transparent"></div>
            <p class="text-lg md:text-xl text-base-content/70 italic" 
               style="font-family: 'Caveat', 'Patrick Hand', cursive;">
              — {currentQuote.author}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="mt-16 text-center">
      <div class="card card-border bg-base-100 max-w-2xl mx-auto">
        <div class="card-body items-center text-center">
          <h3 class="card-title text-3xl mb-4">Börja din resa idag</h3>
          <p class="text-base-content/70 mb-6">
            Oavsett om du är nybörjare eller erfaren, är du välkommen att prova aikido hos oss. 
            Din första lektion är gratis!
          </p>
          <div class="card-actions flex-col sm:flex-row gap-4">
            <a href="/kontakt" class="btn btn-primary btn-lg gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span>Kontakta oss</span>
            </a>
            <a href="/priser" class="btn btn-outline btn-lg gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Se priser</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Magazine Footer -->
    <div class="mt-20 text-center space-y-4">
      <div class="flex items-center justify-center gap-4">
        <div class="h-px w-24 bg-gradient-to-r from-transparent via-base-content/20 to-transparent"></div>
        <div class="flex gap-2">
          <div class="w-2 h-2 bg-primary rounded-full"></div>
          <div class="w-2 h-2 bg-secondary rounded-full"></div>
          <div class="w-2 h-2 bg-accent rounded-full"></div>
        </div>
        <div class="h-px w-24 bg-gradient-to-l from-transparent via-base-content/20 to-transparent"></div>
      </div>
      <p class="text-xs tracking-[0.3em] uppercase text-base-content/40">
        Aikido Dojo Gamlestaden • Göteborg
      </p>
    </div>
  </div>
</section>
