---
export interface Props {
  items: Array<{ href: string; label: string }>;
  class?: string;
}

const { items, class: className } = Astro.props;
---

<div class:list={[
  "sticky top-0 z-40 border-y-2 border-primary bg-primary/10 backdrop-blur-sm",
  className
]}>
  <ul class="flex flex-wrap justify-around">
    {items.map((item) => (
      <li class="py-2 text-center text-sm uppercase">
        <a 
          href={item.href} 
          class="font-bold text-base-content no-underline hover:underline"
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</div>
