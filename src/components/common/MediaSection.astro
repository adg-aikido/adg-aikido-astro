---
export interface Props {
  title: string;
  subtitle?: string;
  id?: string;
  gridCols?: string;
  class?: string;
}

const { 
  title, 
  subtitle, 
  id, 
  gridCols = "grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4",
  class: className 
} = Astro.props;
---

<li class:list={["mb-12", className]}>
  <div class="relative pt-2 pb-3 pl-6 border-l-4 border-primary/30">
    <div class="absolute left-0 top-0 w-1 h-full bg-gradient-to-b from-primary/50 via-primary/20 to-transparent"></div>
    <h2 class="w-full my-0 font-serif text-2xl tracking-wide text-base-content/90" id={id}>
      {title}
    </h2>
    {subtitle && (
      <p class="mt-1 mb-0 text-sm text-base-content/60 italic">{subtitle}</p>
    )}
  </div>
  <ul class:list={["mt-6 grid gap-4", gridCols]}>
    <slot />
  </ul>
</li>
