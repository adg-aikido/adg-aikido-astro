---
export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  amount: string | number;
  unit?: string;
  class?: string;
}

const { 
  title, 
  subtitle, 
  description,
  amount, 
  unit = 'kr',
  class: className 
} = Astro.props;
---

<div class:list={[
  "flex h-full items-center justify-between rounded border-l-4 border-primary bg-white/70 p-2 shadow backdrop-blur-sm",
  className
]}>
  <div class="flex flex-col px-2">
    <span>{title}</span>
    {subtitle && (
      <span class="text-xs text-gray-600">{subtitle}</span>
    )}
    {description && (
      <span class="text-sm text-gray-600">{description}</span>
    )}
  </div>
  <span class="flex flex-col border-l border-primary pl-6 text-center text-lg">
    <span>{amount}</span>
    <span class="text-xs text-gray-600">{unit}</span>
  </span>
</div>
