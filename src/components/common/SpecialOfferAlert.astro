---
/**
 * SpecialOfferAlert Component
 * 
 * Displays special offers or promotional messages in an alert box.
 * Commonly used on pricing pages.
 */

export interface Props {
  type?: 'info' | 'success' | 'warning' | 'error';
  title: string;
  message: string;
  icon?: 'info' | 'success' | 'warning' | 'tag' | 'none';
}

const { 
  type = 'info',
  title,
  message,
  icon = 'info'
} = Astro.props;

const alertClass = `alert alert-${type} mt-8 shadow-lg`;
---

<div class={alertClass}>
  {icon === 'info' && (
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="h-6 w-6 shrink-0 stroke-current">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
  )}
  {icon === 'success' && (
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="h-6 w-6 shrink-0 stroke-current">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
  )}
  {icon === 'warning' && (
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="h-6 w-6 shrink-0 stroke-current">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
    </svg>
  )}
  {icon === 'tag' && (
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="h-6 w-6 shrink-0 stroke-current">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
    </svg>
  )}
  <div>
    <h3 class="font-bold">{title}</h3>
    <div class="text-sm">{message}</div>
  </div>
</div>
