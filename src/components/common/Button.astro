---
export interface Props {
  href: string;
  variant?: "primary" | "secondary" | "ghost";
  size?: "small" | "medium" | "large";
  class?: string;
}

const { 
  href, 
  variant = "secondary",
  size = "medium",
  class: className 
} = Astro.props;

const variantClasses = {
  primary: "btn-accent",
  secondary: "btn-outline",
  ghost: "btn-ghost"
};

const sizeClasses = {
  small: "btn-sm",
  medium: "btn-md",
  large: "btn-lg"
};
---

<a
  href={href}
  class:list={[
    "btn",
    variantClasses[variant],
    sizeClasses[size],
    className
  ]}
>
  <slot />
</a>
