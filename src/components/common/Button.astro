---
export interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

<a
  href={href}
  class:list={[
    "inline-flex items-center justify-center px-6 py-3 font-bold text-white no-underline transition whitespace-nowrap bg-accent rounded-lg hover:opacity-80",
    className
  ]}
>
  <slot />
</a>
