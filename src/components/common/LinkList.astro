---
export interface Props {
  items: Array<{
    href: string;
    label: string;
  }>;
  columns?: 1 | 2 | 3;
  class?: string;
}

const { items, columns = 3, class: className } = Astro.props;

const columnClasses = {
  1: 'lg:w-full',
  2: 'lg:w-1/2',
  3: 'lg:w-1/3'
};
---

<ul class:list={["flex flex-wrap", className]}>
  {items.map((item) => (
    <li class:list={["w-full px-2 py-1", columnClasses[columns]]}>
      <a 
        href={item.href} 
        class="font-normal text-base-content no-underline hover:underline"
      >
        {item.label}
      </a>
    </li>
  ))}
</ul>
